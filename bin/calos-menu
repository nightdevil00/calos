#!/bin/bash

export PATH="$HOME/.local/share/calos/bin:$PATH"

# Set to true when going directly to a submenu, so we can exit directly
BACK_TO_EXIT=true

back_to() {
  local parent_menu="$1"

  if [[ "$BACK_TO_EXIT" == "true" ]]; then
    exit 0
  elif [[ -n "$parent_menu" ]]; then
    "$parent_menu"
  else
    show_main_menu
  fi
}

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-a" "$index")
    fi
  fi

  echo -e "$options" | calos-launch-walker --dmenu -N -H --minwidth 225 --minheight 1 --maxheight 600 -p "$prompt…" "${args[@]}" 2>/dev/null
}

terminal() {
  $TERMINAL --class Calos -e "$@"
}

edit_in_nvim() {
  notify-send "Editing fastfetch logo configuration in Neovim." "$1"
  $TERMINAL --class Calos -e nvim "$1"
}

show_style_menu() {
  case $(menu "Style" "󰸌  Theme\n  Font\n  Background\n󱄄  Fastfetch") in
  *Theme*) show_theme_menu ;;
  *Font*) show_font_menu ;;
  *Background*) calos-theme-bg-next ;;
  *Fastfetch*) edit_in_nvim ~/.config/calos/branding/about.txt ;;
  *) show_main_menu ;;
  esac
}

show_theme_menu() {
  walker -H -N -n -m menus:calosthemes --minwidth 200 --minheight 400
}

show_font_menu() {
  theme=$(menu "Font" "$(calos-font-list)" "--width 350" "")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    back_to show_style_menu
  else
    calos-font-set "$theme"
  fi
}

show_capture_menu() {
  case $(menu "Capture" "  Screenshot\n  Screenrecord\n󰃉  Color") in
  *Screenshot*) show_screenshot_menu ;;
  *Screenrecord*) show_screenrecord_menu ;;
  *Color*) pkill hyprpicker || hyprpicker -a ;;
  *) show_main_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "  Region\n  Window\n  Display") in
  *Region*) calos-cmd-screenshot ;;
  *Window*) calos-cmd-screenshot window ;;
  *Display*) calos-cmd-screenshot output ;;
  *) show_capture_menu ;;
  esac
}

show_screenrecord_menu() {
  case $(menu "Screenrecord" "  Region\n  Display") in
  *Region*) calos-cmd-screenrecord ;;
  *Display*) calos-cmd-screenrecord output ;;
  *) show_capture_menu ;;
  esac
}

show_toggle_menu() {
  case $(menu "Toggle" "󰔎  Hyprsunset\n󰍜  Waybar") in
  *Hyprsunset*) calos-toggle-nightlight ;;
  *Waybar*) calos-toggle-waybar ;;
  *) show_main_menu ;;
  esac
}

show_update_process_menu() {
  case $(menu "Restart" "  Hypridle\n  Swww Daemon\n󱄄  SwayOSD\n󰌧  Walker\n󰍜  Waybar") in
  *Hypridle*) calos-restart-hypridle ;;
  *Swww*) calos-restart-swww ;;
  *SwayOSD*) calos-restart-swayosd ;;
  *Walker*) calos-restart-walker ;;
  *Waybar*) calos-restart-waybar ;;
  *) show_main_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "  Packages\n󱄄  Screensaver\n󰜉  Restart\n󰗽  Reboot to BIOS\n󰐥  Shutdown") in
  *Packages*) alacritty --class Calos -e calos-pkg-list ;;
  *Screensaver*) calos-launch-screensaver force ;;
  *Restart*) systemctl reboot ;;
  *BIOS*) systemctl reboot --firmware-setup ;;
    # *Logoff*) systemctl --user start wayland-session-shutdown.target ;;
  *Shutdown*) systemctl poweroff ;;
  *) show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Settings" "󰀻  Apps\n  Style\n  Capture\n󰨙  Toggle\n  Restart\n  System")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) walker -p "Launch..." ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *restart*) show_update_process_menu ;;
  *capture*) show_capture_menu ;;
  *toggle*) show_toggle_menu ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  go_to_menu "$1"
else
  show_main_menu
fi
