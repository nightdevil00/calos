#!/bin/bash

export PATH="$HOME/.local/share/calos/bin:$PATH"

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-a" "$index")
    fi
  fi

  echo -e "$options" | walker --dmenu --theme dmenu_250 -p "$prompt…" "${args[@]}"
}

terminal() {
  $TERMINAL --class Omarchy -e "$@"
}

present_terminal() {
  omarchy-launch-floating-terminal-with-presentation $1
}

edit_in_nvim() {
  notify-send "Editing config file" "$1"
  $TERMINAL -e nvim "$1"
}

install() {
  present_terminal "echo 'Installing $1...'; sudo pacman -S --noconfirm $2"
}

install_and_launch() {
  present_terminal "echo 'Installing $1...'; sudo pacman -S --noconfirm $2 && setsid gtk-launch $3"
}

install_font() {
  present_terminal "echo 'Installing $1...'; sudo pacman -S --noconfirm --needed $2 && sleep 2 && omarchy-font-set '$3'"
}

aur_install() {
  present_terminal "echo 'Installing $1 from AUR...'; yay -S --noconfirm $2"
}

aur_install_and_launch() {
  present_terminal "echo 'Installing $1 from AUR...'; yay -S --noconfirm $2 && setsid gtk-launch $3"
}

show_style_menu() {
  case $(menu "Style" "󰸌  Theme\n  Font\n  Background\n󱄄  Screensaver\n  About") in
  *Theme*) show_theme_menu ;;
  *Font*) show_font_menu ;;
  *Background*) calos-theme-bg-next ;;
  *Screensaver*) edit_in_nvim ~/.config/calos/branding/screensaver.txt ;;
  *About*) edit_in_nvim ~/.config/calos/branding/about.txt ;;
  *) show_main_menu ;;
  esac
}

show_theme_menu() {
  theme=$(menu "Theme" "$(calos-theme-list)" "" "$(calos-theme-current)")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    show_main_menu
  else
    calos-theme-set "$theme"
  fi
}

show_font_menu() {
  theme=$(menu "Font" "$(calos-font-list)" "-w 350" "$(calos-font-current)")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    show_main_menu
  else
    calos-font-set "$theme"
  fi
}

show_capture_menu() {
  case $(menu "Capture" "  Screenshot\n  Screenrecord\n󰃉  Color") in
  *Screenshot*) show_screenshot_menu ;;
  *Screenrecord*) show_screenrecord_menu ;;
  *Color*) pkill hyprpicker || hyprpicker -a ;;
  *) show_main_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "  Region\n  Window\n  Display") in
  *Region*) calos-cmd-screenshot ;;
  *Window*) calos-cmd-screenshot window ;;
  *Display*) calos-cmd-screenshot output ;;
  *) show_capture_menu ;;
  esac
}

show_screenrecord_menu() {
  case $(menu "Screenrecord" "  Region\n  Display") in
  *Region*) calos-cmd-screenrecord ;;
  *Display*) calos-cmd-screenrecord output ;;
  *) show_capture_menu ;;
  esac
}

show_toggle_menu() {
  case $(menu "Toggle" "󱄄  Screensaver\n󰔎  Nightlight\n󱫖  Idle Lock\n󰍜  Top Bar") in
  *Screensaver*) calos-toggle-screensaver ;;
  *Nightlight*) calos-toggle-nightlight ;;
  *Idle*) calos-toggle-idle ;;
  *Bar*) calos-toggle-waybar ;;
  *) show_main_menu ;;
  esac
}

show_install_gaming_menu() {
  case $(menu "Install" "  Steam\n  RetroArch [AUR]") in
  *Steam*) present_terminal omarchy-install-steam ;;
  *RetroArch*) aur_install_and_launch "RetroArch" "retroarch retroarch-assets libretro libretro-fbneo" "com.libretro.RetroArch.desktop" ;;
  *) show_install_menu ;;
  esac
}

show_update_process_menu() {
  case $(menu "Restart" "  Hypridle\n  Hyprsunset\n  Swayosd\n󰌧  Walker\n󰍜  Waybar") in
  *Hypridle*) calos-restart-hypridle ;;
  *Hyprsunset*) calos-restart-hyprsunset ;;
  *Swayosd*) calos-restart-swayosd ;;
  *Walker*) calos-restart-walker ;;
  *Waybar*) calos-restart-waybar ;;
  *) show_main_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "󱄄  Screensaver\n󰜉  Restart\n󰐥  Shutdown") in
  *Screensaver*) calos-launch-screensaver force ;;
  *Restart*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  *) show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "󰀻  Apps\n󰸌  Themes\n  Style\n  Capture\n󰔎  Toggle\n  Restart\n  System")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) walker -p "Launch..." ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *restart*) show_update_process_menu ;;
  *capture*) show_capture_menu ;;
  *toggle*) show_toggle_menu ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  go_to_menu "$1"
else
  show_main_menu
fi
