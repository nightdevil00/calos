#!/bin/bash

sleep 1
sed -i "/exec-once = firststart/"'s///' ~/.config/hypr/autostart.conf
notify-send "Welcome to calOS!" "Installation successful." -t 3000
sleep 3
notify-send "Use SUPER + K to review default keybinds." "These can be configured by editing ~/.config/hypr/keybindings.conf." -t 5000
notify-send "SUPER + ESCAPE will bring up your system menu." -t 5000
sleep 5
notify-send "Please select a default theme." "This can be changed at any time by using the system menu or SUPER + CTRL + T." -t 5000
systemctl --user enable waybar.service
exec walker -H -N -n -m menus:calosthemes --minwidth 300 --height 600
